<Window x:Class="ProjektManager.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektManager.View"
        xmlns:vm="clr-namespace:ProjektManager.ViewModel"
        xmlns:usercontrol="clr-namespace:ProjektManager.ControlElements"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl>
            <TabItem Header="Projekte">
                <usercontrol:ProjektUbersichtControl/>
            </TabItem>
            <TabItem Header="Stundenbuchung">
                <usercontrol:StundenbuchungControl/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
